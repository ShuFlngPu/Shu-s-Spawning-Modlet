<config>

	<!-- ============================================================================ -->
	<!-- Biome Definitions - Full Removal and Re-append for Modlet Consistency -->
	<!-- NOTE: The 'remove' blocks below are retained as they were present in the -->
	<!-- original modlet structure to ensure full overwrite of vanilla biome data. -->
	<!-- V1: Decreased respawndelay to 0.2, increased maxcount (1->2, 2->3, 3->4, 5->6) -->
	<!-- ============================================================================ -->

	<remove xpath="/spawning/biome[@name='pine_forest']" />
	<remove xpath="/spawning/biome[@name='burnt_forest']" />
	<remove xpath="/spawning/biome[@name='desert']" />
	<remove xpath="/spawning/biome[@name='snow']" />
	<remove xpath="/spawning/biome[@name='wasteland']" />

	<append xpath="/spawning">
		
		<!-- PINE FOREST BIOME - ANIMALS/ZOMBIES -->
		<biome name="pine_forest">
			<!-- Zombie Spawns: respawndelay changed from 0.5 to 0.2, maxcount increased -->
			<spawn id="dz01" maxcount="2" respawndelay="0.2" time="Day" entitygroup="MOD_Forest_Day" notags="commercial,industrial,downtown" /> <!-- maxcount 1->2 -->
			<spawn id="nz01" maxcount="2" respawndelay="0.2" time="Night" entitygroup="MOD_Forest_Night" notags="commercial,industrial,downtown" /> <!-- maxcount 1->2 -->
			
			<!-- *** LOGIC FIX ***: Pointed commercial/industrial spawns to the correct MOD_Downtown_Forest groups -->
			<spawn id="dz02" maxcount="3" respawndelay="0.2" time="Day" entitygroup="MOD_Downtown_Forest_Day" tags="commercial,industrial" notags="downtown" /> <!-- maxcount 2->3 -->
			<spawn id="nz02" maxcount="4" respawndelay="0.2" time="Night" entitygroup="MOD_Downtown_Forest_Night" tags="commercial,industrial" notags="downtown" /> <!-- maxcount 3->4 -->
			
			<!-- *** LOGIC FIX ***: Pointed downtown spawns to the correct MOD_Downtown_Forest groups -->
			<spawn id="dz03" maxcount="4" respawndelay="0.25" time="Day" entitygroup="MOD_Downtown_Forest_Day" tags="downtown" /> <!-- maxcount 3->4 -->
			<spawn id="nz03" maxcount="6" respawndelay="0.3" time="Night" entitygroup="MOD_Downtown_Forest_Night" tags="downtown" /> <!-- maxcount 5->6 -->
			
			<!-- ANIMAL FIX: Uses MOD_PineForest_Animals_Common for Rabbits (10%), Deer (10%), Young Bear (1%), Pig (1%) -->
			<!-- Animal spawns unchanged -->
			<spawn id="aa01" maxcount="1" respawndelay="1.5" time="Any" entitygroup="MOD_PineForest_Animals_Common" /> 
		</biome>

		<!-- BURNT FOREST BIOME - PIGS/ZOMBIES -->
		<biome name="burnt_forest">
			<!-- Zombie Spawns: respawndelay changed from 0.5 to 0.2, maxcount increased -->
			<spawn id="dz01" maxcount="2" respawndelay="0.2" time="Day" entitygroup="MOD_Desert_Day" notags="commercial,industrial,downtown" /> <!-- maxcount 1->2 -->
			<spawn id="nz01" maxcount="2" respawndelay="0.2" time="Night" entitygroup="MOD_Desert_Night" notags="commercial,industrial,downtown" /> <!-- maxcount 1->2 -->
			<spawn id="dz02" maxcount="3" respawndelay="0.2" time="Day" entitygroup="MOD_Desert_Day" tags="commercial,industrial" notags="downtown" /> <!-- maxcount 2->3 -->
			<spawn id="nz02" maxcount="4" respawndelay="0.25" time="Night" entitygroup="MOD_Desert_Night" tags="commercial,industrial" notags="downtown" /> <!-- maxcount 3->4 -->
			<spawn id="dz03" maxcount="4" respawndelay="0.25" time="Day" entitygroup="MOD_Desert_Day" tags="downtown" /> <!-- maxcount 3->4 -->
			<spawn id="nz03" maxcount="6" respawndelay="0.3" time="Night" entitygroup="MOD_Desert_Night" tags="downtown" /> <!-- maxcount 5->6 -->
			
			<!-- ANIMAL FIX: Pigs assigned to 10% rate group -->
			<!-- Animal spawns unchanged -->
			<spawn id="MOD_Pigs01" maxcount="1" respawndelay="1.0" time="Any" entitygroup="MOD_Pigs_Uncommon_DesertBurnt" />
		</biome>
		
		<!-- DESERT BIOME - PIGS/ZOMBIES -->
		<biome name="desert">
			<!-- Zombie Spawns: respawndelay changed from 0.5 to 0.2, maxcount increased -->
			<spawn id="dz01" maxcount="2" respawndelay="0.2" time="Day" entitygroup="MOD_Desert_Day" notags="commercial,industrial,downtown" /> <!-- maxcount 1->2 -->
			<spawn id="nz01" maxcount="2" respawndelay="0.2" time="Night" entitygroup="MOD_Desert_Night" notags="commercial,industrial,downtown" /> <!-- maxcount 1->2 -->
			<spawn id="dz02" maxcount="3" respawndelay="0.2" time="Day" entitygroup="MOD_Desert_Day" tags="commercial,industrial" notags="downtown" /> <!-- maxcount 2->3 -->
			<spawn id="nz02" maxcount="4" respawndelay="0.25" time="Night" entitygroup="MOD_Desert_Night" tags="commercial,industrial" notags="downtown" /> <!-- maxcount 3->4 -->
			<spawn id="dz03" maxcount="4" respawndelay="0.25" time="Day" entitygroup="MOD_Desert_Day" tags="downtown" /> <!-- maxcount 3->4 -->
			<spawn id="nz03" maxcount="6" respawndelay="0.3" time="Night" entitygroup="MOD_Desert_Night" tags="downtown" /> <!-- maxcount 5->6 -->
			
			<!-- ANIMAL FIX: Pigs assigned to 10% rate group -->
			<!-- Animal spawns unchanged -->
			<spawn id="MOD_Pigs02" maxcount="1" respawndelay="1.0" time="Any" entitygroup="MOD_Pigs_Uncommon_DesertBurnt" />
			<spawn id="MOD_Snakes01" maxcount="1" respawndelay="1.5" time="Any" entitygroup="MOD_Snakes_Desert_Rare" />
		</biome>

		<!-- SNOW BIOME - ZOMBIES -->
		<biome name="snow">
			<!-- Zombie Spawns: respawndelay changed from 0.5 to 0.2, maxcount increased -->
			<spawn id="dz01" maxcount="2" respawndelay="0.2" time="Day" entitygroup="MOD_Desert_Day" notags="commercial,industrial,downtown" /> <!-- maxcount 1->2 -->
			<spawn id="nz01" maxcount="2" respawndelay="0.2" time="Night" entitygroup="MOD_Desert_Night" notags="commercial,industrial,downtown" /> <!-- maxcount 1->2 -->
			<spawn id="dz02" maxcount="3" respawndelay="0.25" time="Day" entitygroup="MOD_Desert_Day" tags="commercial,industrial" notags="downtown" /> <!-- maxcount 2->3 -->
			<spawn id="nz02" maxcount="4" respawndelay="0.25" time="Night" entitygroup="MOD_Desert_Night" tags="commercial,industrial" notags="downtown" /> <!-- maxcount 3->4 -->
			<spawn id="dz03" maxcount="4" respawndelay="0.25" time="Day" entitygroup="MOD_Desert_Day" tags="downtown" /> <!-- maxcount 3->4 -->
			<spawn id="nz03" maxcount="6" respawndelay="0.3" time="Night" entitygroup="MOD_Desert_Night" tags="downtown" /> <!-- maxcount 5->6 -->
			
			<!-- ANIMAL FIX: Pigs assigned to 10% rate group -->
			<!-- Animal spawns unchanged -->
			<!-- NOTE: Original modlet had aa01 using MOD_Pigs_Uncommon_DesertBurnt here. Kept as-is. -->
			<spawn id="aa01" maxcount="1" respawndelay="1.0" time="Any" entitygroup="MOD_Pigs_Uncommon_DesertBurnt" />
		</biome>
		
		<!-- WASTELAND BIOME - PIGS/ZOMBIES -->
		<biome name="wasteland">
			<!-- Zombie Spawns: respawndelay changed from 0.5 to 0.2, maxcount increased -->
			<spawn id="dz01" maxcount="2" respawndelay="0.2" time="Day" entitygroup="MOD_Desert_Day" notags="commercial,industrial,downtown" /> <!-- maxcount 1->2 -->
			<spawn id="nz01" maxcount="2" respawndelay="0.2" time="Night" entitygroup="MOD_Desert_Night" notags="commercial,industrial,downtown" /> <!-- maxcount 1->2 -->
			<spawn id="dz02" maxcount="3" respawndelay="0.25" time="Day" entitygroup="MOD_Desert_Day" tags="commercial,industrial" notags="downtown" /> <!-- maxcount 2->3 -->
			<spawn id="nz02" maxcount="4" respawndelay="0.25" time="Night" entitygroup="MOD_Desert_Night" tags="commercial,industrial" notags="downtown" /> <!-- maxcount 3->4 -->
			<spawn id="dz03" maxcount="4" respawndelay="0.25" time="Day" entitygroup="MOD_Desert_Day" tags="downtown" /> <!-- maxcount 3->4 -->
			<spawn id="nz03" maxcount="6" respawndelay="0.3" time="Night" entitygroup="MOD_Desert_Night" tags="downtown" /> <!-- maxcount 5->6 -->
			
			<!-- ANIMAL FIX: Pigs assigned to 5% rate group -->
			<!-- Animal spawns unchanged -->
			<spawn id="MOD_Pigs03" maxcount="1" respawndelay="1.5" time="Any" entitygroup="MOD_Pigs_Rare_Wasteland" />
			<spawn id="MOD_Snakes02" maxcount="1" respawndelay="1.5" time="Any" entitygroup="MOD_Snakes_Wasteland_Uncommon" />
		</biome>

	</append>
</config>
