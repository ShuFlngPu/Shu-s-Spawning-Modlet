				<triggered_effect trigger="onSelfPrimaryActionEnd" action="AddBuff" buff="buffSledgehammersTracker"/>
				<triggered_effect trigger="onSelfPrimaryActionEnd" action="AddBuff" buff="buffKnucklesTracker"/>
				<triggered_effect trigger="onSelfPrimaryActionEnd" action="AddBuff" buff="buffSpearsTracker"/>
				<triggered_effect trigger="onSelfPrimaryActionEnd" action="AddBuff" buff="buffHandgunsTracker"/>
