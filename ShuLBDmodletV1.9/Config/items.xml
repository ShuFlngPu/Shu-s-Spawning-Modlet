				<triggered_effect trigger="onSelfPrimaryActionEnd" action="AddBuff" buff="buffBowsTracker"/>
				<triggered_effect trigger="onSelfPrimaryActionEnd" action="AddBuff" buff="buffRoboticsTracker"/>
				<triggered_effect trigger="onSelfPrimaryActionEnd" action="AddBuff" buff="buffMedicalTracker"/>
				<triggered_effect trigger="onSelfPrimaryActionEnd" action="AddBuff" buff="buffElectricianTracker"/>
				<triggered_effect trigger="onSelfPrimaryActionEnd" action="AddBuff" buff="buffVehiclesTracker"/>
				<triggered_effect trigger="onSelfPrimaryActionEnd" action="AddBuff" buff="buffSeedsTracker"/>
				<triggered_effect trigger="onSelfPrimaryActionEnd" action="AddBuff" buff="buffArmorTracker"/>
				
			</effect_group>
			
		</item>

		<!-- ADDED: LBD REMOVAL ITEM - Deactivates the system -->
		<item name="itemLBDRemoval">
			<property name="Extends" value="blankNoteMaster"/>
			<property name="CreativeMode" value="Player"/>
			<property name="CustomIcon" value="foodRottingFlesh"/> <!-- Placeholder Icon -->
			<property name="ItemTypeIcon" value="book"/>
			<property name="AltItemTypeIcon" value="book_read"/>
			<property name="CustomIconTint" value="255,0,0"/> <!-- Red Tint -->
			<property name="Stacknumber" value="1"/>
			<property name="DescriptionKey" value="itemLBDRemovalDesc"/>
			<property name="Candrop" value="false"/>
			
			<property class="Action0">
				<property name="Class" value="Eat"/>
				<property name="Delay" value="1.0"/>
				<property name="Sound_start" value="player_painlg"/> <!-- Different sound -->
				<!-- This item is consumed on use -->
			</property>
			
			<effect_group name="LBD_System_Removal">
				<!-- REMOVE ALL BUFFS -->
				<triggered_effect trigger="onSelfPrimaryActionEnd" action="RemoveBuff" 
					buff="buffLBDManager,buffStoneAxeTracker,buffHarvestingToolsTracker,buffRepairToolsTracker,buffWorkstationsTracker,buffFoodTracker,buffLootingTracker,buffSalvageToolsTracker,buffBladesTracker,buffClubsTracker,buffSledgehammersTracker,buffKnucklesTracker,buffSpearsTracker,buffHandgunsTracker,buffShotgunsTracker,buffRiflesTracker,buffMachineGunsTracker,buffExplosivesTracker,buffBowsTracker,buffRoboticsTracker,buffMedicalTracker,buffElectricianTracker,buffVehiclesTracker,buffSeedsTracker,buffArmorTracker"/>

				<!-- REMOVE ALL CVARS (Effectively sets them to 0) -->
				<triggered_effect trigger="onSelfPrimaryActionEnd" action="RemoveCVar" 
					cvar="craftingHarvestingToolsShuLDBexp,craftingRepairToolsShuLDBexp,craftingWorkstationsShuLDBexp,craftingFoodShuLDBexp,lootingShuLDBexp,craftingSalvageToolsShuLDBexp,craftingBladesShuLDBexp,craftingClubsShuLDBexp,craftingSledgehammersShuLDBexp,craftingKnucklesShuLDBexp,craftingSpearsShuLDBexp,craftingHandgunsShuLDBexp,craftingShotgunsShuLDBexp,craftingRiflesShuLDBexp,craftingMachineGunsShuLDBexp,craftingExplosivesShuLDBexp,craftingBowsShuLDBexp,craftingRoboticsShuLDBexp,craftingMedicalShuLDBexp,craftingElectricianShuLDBexp,craftingSeedsShuLDBexp,craftingArmorShuLDBexp,craftingVehiclesShuLDBexp,craftingHarvestingToolsShuLDBThreshold,craftingRepairToolsShuLDBThreshold,craftingWorkstationsShuLDBThreshold,craftingFoodShuLDBThreshold,LootingSkillThreshold,craftingSalvageToolsShuLDBThreshold,craftingBladesShuLDBThreshold,craftingClubsShuLDBThreshold,craftingSledgehammersShuLDBThreshold,craftingKnucklesShuLDBThreshold,craftingSpearsShuLDBThreshold,craftingHandgunsShuLDBThreshold,craftingShotgunsShuLDBThreshold,craftingRiflesShuLDBThreshold,craftingMachineGunsShuLDBThreshold,craftingExplosivesShuLDBThreshold,craftingBowsShuLDBThreshold,craftingRoboticsShuLDBThreshold,craftingMedicalShuLDBThreshold,craftingElectricianShuLDBThreshold,craftingSeedsShuLDBThreshold,craftingArmorShuLDBThreshold,craftingVehiclesShuLDBThreshold,LBD_isBlade,LBD_isClub,LBD_isSledge,LBD_isKnuckle,LBD_isSpear,LBD_isHandgun,LBD_isShotgun,LBD_isRifle,LBD_isMachineGun,LBD_isExplosive,LBD_isBow,LBD_isRobotics,LBD_canHarvest,LBD_canRepair,LBD_canSalvage,LBD_isMedical,LBD_isElectrician,LBD_isFood,LBD_isStoneAxe,$inCombatLBDtimer"/>
