<config>

	<!-- 
	===================================================================
	== LBD Crafting Progression File ==
	This file has been reverted to use the stable CVar system. It now
	grants XP directly to the appropriate CVar upon crafting.
	===================================================================
	-->

	<!-- =============================================================================== -->
	<!-- FOOD SKILL RECIPES                                                              -->
	<!-- =============================================================================== -->

	<!-- Add LBD trigger to Boiled Water recipe -->
	<append xpath="/recipes/recipe[@name='foodBoiledWater']">
		<effect_group>
			<triggered_effect trigger="onSelfCraft" action="ModifyCVar" cvar="craftingFoodShuLDBexp" operation="add" value="1"/>
		</effect_group>
	</append>

	<!-- Add LBD trigger to Grilled Meat recipe -->
	<append xpath="/recipes/recipe[@name='foodGrilledMeat']">
		<effect_group>
			<triggered_effect trigger="onSelfCraft" action="ModifyCVar" cvar="craftingFoodShuLDBexp" operation="add" value="1"/>
		</effect_group>
	</append>


	<!-- =============================================================================== -->
	<!-- ELECTRICIAN SKILL RECIPES                                                       -->
	<!-- =============================================================================== -->

	<!-- Add LBD trigger to Electric Parts recipe -->
	<append xpath="/recipes/recipe[@name='resourceElectricParts']">
		<effect_group>
			<triggered_effect trigger="onSelfCraft" action="ModifyCVar" cvar="craftingElectricianShuLDBexp" operation="add" value="1"/>
		</effect_group>
	</append>

	<!-- Add LBD trigger to Wire Tool recipe -->
	<append xpath="/recipes/recipe[@name='meleeToolWireTool']">
		<effect_group>
			<triggered_effect trigger="onSelfCraft" action="ModifyCVar" cvar="craftingElectricianShuLDBexp" operation="add" value="1"/>
		</effect_group>
	</append>

</config>