<config>

<!-- Default Animal Spawn IDs by biome
-Pine aa01 animals all, na01 pine animals night, ne01 enemy animals night only
-Burnt aa01 passive animals all, na01 passive animals night, ae01 enemy animals Anytime, ne01 enemy animals night
-Desert aa01 passive animals all, ae01 enemy animals all, ne01 enemy animals night
-Snow aa01 passive animals all, na01 nighttime stag, ae01 enemy animals all, ne01 enemy animals night
-Wasteland na01 passive animals all, ae01 enemy animals all, ne01 enemy animals night
-->


<!-- Workflow Notes: Change Animal Spawning links. -->
	<remove xpath="/spawning/biome[@name='pine_forest']" />
	<remove xpath="/spawning/biome[@name='burnt_forest']" />
	<remove xpath="/spawning/biome[@name='desert']" />
	<remove xpath="/spawning/biome[@name='snow']" />
	<remove xpath="/spawning/biome[@name='wasteland']" />

	<append xpath="/spawning">
		
		<biome name="pine_forest">
			<spawn id="dz01" maxcount="2" respawndelay="0.2" time="Day" entitygroup="MOD_Forest_Day" notags="commercial,industrial,downtown" />
			<spawn id="nz01" maxcount="2" respawndelay="0.2" time="Night" entitygroup="MOD_Forest_Night" notags="commercial,industrial,downtown" />
			
			<spawn id="dz02" maxcount="3" respawndelay="0.2" time="Day" entitygroup="MOD_ForestDowntown_Day" tags="commercial,industrial" notags="downtown" />
			<spawn id="nz02" maxcount="4" respawndelay="0.2" time="Night" entitygroup="MOD_ForestDowntown_Night" tags="commercial,industrial" notags="downtown" />
			
			<spawn id="dz03" maxcount="4" respawndelay="0.25" time="Day" entitygroup="MOD_ForestDowntown_Day" tags="downtown" />
			<spawn id="nz03" maxcount="6" respawndelay="0.3" time="Night" entitygroup="MOD_ForestDowntown_Night" tags="downtown" />
			
			<spawn id="Mod_Pine01" maxcount="1" respawndelay="1.5" time="Any" entitygroup="MOD_Animals_Pine" />
		</biome>

		<biome name="burnt_forest">
			<spawn id="dz01" maxcount="2" respawndelay="0.2" time="Day" entitygroup="MOD_Burnt_Day" notags="commercial,industrial,downtown" />
			<spawn id="nz01" maxcount="2" respawndelay="0.2" time="Night" entitygroup="MOD_Burnt_Night" notags="commercial,industrial,downtown" />
			
			<spawn id="dz02" maxcount="3" respawndelay="0.2" time="Day" entitygroup="MOD_Burnt_Day" tags="commercial,industrial" notags="downtown" />
			<spawn id="nz02" maxcount="4" respawndelay="0.25" time="Night" entitygroup="MOD_Burnt_Night" tags="commercial,industrial" notags="downtown" />
			
			<spawn id="dz03" maxcount="4" respawndelay="0.25" time="Day" entitygroup="MOD_Burnt_Day" tags="downtown" />
			<spawn id="nz03" maxcount="6" respawndelay="0.3" time="Night" entitygroup="MOD_Burnt_Night" tags="downtown" />
			
			<spawn id="MOD_Burnt01" maxcount="1" respawndelay="1.0" time="Any" entitygroup="MOD_Animals_Burnt" />
		</biome>
		
		<biome name="desert">
			<spawn id="dz01" maxcount="3" respawndelay="0.1" time="Day" entitygroup="MOD_Desert_Day" notags="commercial,industrial,downtown" />
			<spawn id="nz01" maxcount="3" respawndelay="0.1" time="Night" entitygroup="MOD_Desert_Night" notags="commercial,industrial,downtown" />
			
			<spawn id="dz02" maxcount="3" respawndelay="0.15" time="Day" entitygroup="MOD_DesertDowntown_Day" tags="commercial,industrial" notags="downtown" />
			<spawn id="nz02" maxcount="4" respawndelay="0.20" time="Night" entitygroup="MOD_DesertDowntown_Night" tags="commercial,industrial" notags="downtown" />
			
			<spawn id="dz03" maxcount="4" respawndelay="0.20" time="Day" entitygroup="MOD_DesertDowntown_Day" tags="downtown" />
			<spawn id="nz03" maxcount="6" respawndelay="0.25" time="Night" entitygroup="MOD_DesertDowntown_Night" tags="downtown" />
			
			<spawn id="MOD_Desert01" maxcount="1" respawndelay="1.0" time="Any" entitygroup="MOD_Animals_Desert" />
		</biome>

		<biome name="snow">
			<spawn id="dz01" maxcount="3" respawndelay="0.1" time="Day" entitygroup="MOD_Snow_Day" notags="commercial,industrial,downtown" />
			<spawn id="nz01" maxcount="3" respawndelay="0.1" time="Night" entitygroup="MOD_Snow_Night" notags="commercial,industrial,downtown" />
			
			<spawn id="dz02" maxcount="3" respawndelay="0.15" time="Day" entitygroup="MOD_Snow_Day" tags="commercial,industrial" notags="downtown" />
			<spawn id="nz02" maxcount="4" respawndelay="0.20" time="Night" entitygroup="MOD_Snow_Night" tags="commercial,industrial" notags="downtown" />
			
			<spawn id="dz03" maxcount="4" respawndelay="0.20" time="Day" entitygroup="MOD_Snow_Day" tags="downtown" />
			<spawn id="nz03" maxcount="6" respawndelay="0.25" time="Night" entitygroup="MOD_Snow_Night" tags="downtown" />
			
			<spawn id="Mod_Snow01" maxcount="1" respawndelay="1.0" time="Any" entitygroup="MOD_Animals_Snow" />
		</biome>
		
		<biome name="wasteland">
			<spawn id="dz01" maxcount="3" respawndelay="0.1" time="Day" entitygroup="MOD_Wasteland_Day" notags="commercial,industrial,downtown" />
			<spawn id="nz01" maxcount="3" respawndelay="0.1" time="Night" entitygroup="MOD_Wasteland_Night" notags="commercial,industrial,downtown" />
			
			<spawn id="dz02" maxcount="4" respawndelay="0.15" time="Day" entitygroup="MOD_WastelandDowntown_Day" tags="commercial,industrial" notags="downtown" />
			<spawn id="nz02" maxcount="4" respawndelay="0.15" time="Night" entitygroup="MOD_WastelandDowntown_Night" tags="commercial,industrial" notags="downtown" />
			
			<spawn id="dz03" maxcount="4" respawndelay="0.15" time="Day" entitygroup="MOD_WastelandDowntown_Day" tags="downtown" />
			<spawn id="nz03" maxcount="6" respawndelay="0.15" time="Night" entitygroup="MOD_WastelandDowntown_Night" tags="downtown" />
			
			<spawn id="MOD_Wasteland01" maxcount="1" respawndelay="1.5" time="Any" entitygroup="MOD_Animals_Wasteland" />
		</biome>

	</append>

	<remove xpath="/spawning/entityspawner[@name='SpawnBurntTown']" />

	<append xpath="/spawning">
		<entityspawner name="SpawnBurntTown">
			<day value="*">
				<property name="ResetToday" value="false" />
				<property name="EntityGroupName" value="MOD_Burnt_Day" />
				<property name="Time" value="Any" />
				<property name="DelayBetweenSpawns" value="0" />
				<property name="TotalAlive" value="12" />
				<property name="TotalPerWave" value="12" />
				<property name="DaysToRespawnIfPlayerLeft" value="5" />
				<property name="AttackPlayerAtOnce" value="false" />
			</day>
		</entityspawner>
	</append>
</config>